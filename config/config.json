{
  "system": {
    "debug_mode": false,
    "log_level": "INFO",
    "log_file": "logs/system.log",
    "max_threads": 4,
    "environment": "production"
  },
  "api": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8080,
    "timeout": 30,
    "max_connections": 100,
    "rate_limit": 60
  },
  "modules": {
    "knowledge_core": {
      "enabled": true,
      "database_path": "data/knowledge.db",
      "max_entries": 10000,
      "auto_save": true,
      "save_interval": 300
    },
    "training_local": {
      "enabled": true,
      "model_path": "models/local_model",
      "batch_size": 32,
      "learning_rate": 0.001,
      "epochs": 10,
      "validation_split": 0.2
    },
    "repair_backup": {
      "enabled": true,
      "backup_dir": "backups/",
      "max_backups": 5,
      "backup_interval": 86400,
      "compression": true
    }
  },
  "ui": {
    "default_mode": "console",
    "theme": "dark",
    "auto_refresh": true,
    "refresh_interval": 5,
    "console": {
      "color_enabled": true,
      "history_size": 1000
    },
    "gui": {
      "width": 1024,
      "height": 768,
      "fullscreen": false,
      "font_size": 12
    }
  }
}